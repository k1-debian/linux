config VIDEO_INGENIC_CIM
	tristate "Ingenic Soc Camera Driver for X2000 && M300 && X1600 && X2600"
	select VIDEOBUF2_DMA_CONTIG_INGENIC
	select V4L2_FWNODE
	help
		CIM Driver for X2000 && M300 && X1600 && X2600

config CAMERA_USE_SNAPSHOT
	bool "Sensor support snapshot function"
	depends on VIDEO_INGENIC_CIM
	help
		Sensor support snapshot function

config SNAPSHOT_PULSE_WIDTH
        int "Snapshot pulse width"
        depends on CAMERA_USE_SNAPSHOT
        default 8
        help
          Snapshot pulse width

config SNAPSHOT_FRAME_DELAY
        int "One frame end delay"
        depends on CAMERA_USE_SNAPSHOT
        default 100
        help
          One frame end delay

menuconfig X2600_CAMERA_BOARD
	bool "x2600_camera_board"
	depends on VIDEO_INGENIC_CIM
	depends on SOC_X2600
	default n
	help
	  Say Y here to enable support for x2600_camera_boards.

config TUCANA_DVP_CAMERA
	bool "x2600_tucana camera driver for X2600_TUCANA_DVP_OV5640_CAMERA"
	depends on X2600_CAMERA_BOARD
	select INGENIC_CIM_CAMERA_OV5640

config	RD_X2600_DVP_CAMERA
	bool "x2600_camera driver for X2600_GC0308 DVP camera"
	depends on X2600_CAMERA_BOARD
	select INGENIC_CIM_CAMERA_DVP_GC0308

