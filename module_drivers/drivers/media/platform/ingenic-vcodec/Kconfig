config VIDEO_INGENIC_VCODEC
        tristate "V4L2 driver for ingenic Video Codec"
        depends on VIDEO_DEV && VIDEO_V4L2_I2C
        select V4L2_MEM2MEM_DEV
        select VIDEOBUF2_DMA_CONTIG_INGENIC
        select VIDEOBUF2_DMA_CONTIG

config INGENIC_HELIX
	tristate "[ENC] ingenic video helix"
	depends on VIDEO_INGENIC_VCODEC

choice
	prompt "H264E RC Method"
	depends on INGENIC_HELIX
	default INGENIC_HELIX_H264E_RC_NETLINK

config INGENIC_HELIX_H264E_RC_NETLINK
	bool "H264E RC algrithom run in user througth Netlink"
	help
		need h264e-nl-server run in userspace.

config INGENIC_HELIX_H264E_RC_IN_KERNEL
	bool "H264E RC algrithom run in kernel"
	help
		RC algrithom run in kernel direct.
endchoice

config INGENIC_FELIX
	tristate "[DEC] ingenic video felix"
	depends on VIDEO_INGENIC_VCODEC
	select V4L2_FWNODE

config FELIX_INIT_BY_USER
    bool "felix init triggered by user"
    depends on INGENIC_FELIX


